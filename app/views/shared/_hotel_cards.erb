<% Hotel.all.each do |hotel| %>
  <div class="hotel-product">
    <img src="<%= cl_image_path(hotel.photo.key, resize: '200x300') %>" alt="<%= hotel.name %>">
    <div class="hotel-product-infos">
      <h2><%= hotel.name %></h2>
      <p><%= hotel.description %></p>
    </div>
    <button class="hotel_select_button btn btn-primary">Book me !</button>
  </div>
<% end %>
