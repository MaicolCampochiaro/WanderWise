<%= form_with url: trip_flights_path(params[:id]),
              method: :get,
              html: {
                class: "mb-4",
              } do |f| %>
  <div class="search-container r13 w-50">
    <div class="row row-cols-2">
      <div class="col mb-2">
        <%= f.text_field :from,
                        class: "form-control r13 search-text",
                        placeholder: "From" %>
      </div>
      <div class="col">
        <%= f.text_field :to,
                        class: "form-control r13 search-text",
                        placeholder: trip.location.name,
                        value: trip.location.name %>
      </div>
      <div class="col">
        <%= f.date_field :dates,
                        class: "form-control r13 search-text",
                        placeholder: "Select your dates",
                        data: {
                          controller: "flatpickr",
                          flatpickr_date_format: "Y-m-d",
                          mode: "range",
                          flatpickr_min_date: Time.zone.now
                        } %>
      </div>
      <div class="col d-flex justify-content-between">
        <%# <%= f.number_field :adult, in: 1..20, step: 1 %>
        <%= f.submit "search", class: "form-control r13 search-btn mx-auto", id:"button_style" %>
      </div>
    </div>
  </div>

<% end %>
