<img src="<%= cl_image_path(hotel.photo.key, resize: '200x300') %>" alt="<%= hotel.name %>">
<div class="hotel-product-infos">
  <h2><%= hotel.name %></h2>
  <p><%= hotel.description %></p>
</div>
<% if select_btn %>
  <%= link_to hotel_show_path(id: @trip, hotel_id: hotel.id), action: 'go' do %>
    <button id="button_style" class="select_hotel_button btn btn-primary btn-sm me-3">See availability</button>
  <% end %>
<% end %>
