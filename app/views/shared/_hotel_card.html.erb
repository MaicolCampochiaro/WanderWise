<img src="<%= cl_image_path(hotel.photo.key, resize: '200x300') %>" alt="<%= hotel.name %>">
<div class="hotel-product-infos">
  <h2><%= hotel.name %></h2>
  <p><%= hotel.description %></p>
</div>
<%= link_to hotel_show_path(hotel_id: hotel.id), action: 'go' do %>
  <button class="hotel_select_button btn btn-primary">See availability</button>
<% end %>
